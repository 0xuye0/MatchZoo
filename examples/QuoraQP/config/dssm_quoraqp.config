{
  "net_name": "DSSM",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/QuoraQP/weights/dssm_quoraqp.weights",
      "save_weights_iters": 10,
      "num_iters": 500,
      "display_interval": 10,
      "test_weights_iters": 500,
      "optimizer": "adam",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/QuoraQP/corpus_preprocessed.txt",
        "text2_corpus": "./data/QuoraQP/corpus_preprocessed.txt",
        "word_triletter_map_file": "./data/QuoraQP/word_triletter_map.txt",
        "use_dpool": false,
        "embed_size": 1,
        "vocab_size": 4140,
        "target_mode": "classification",
        "class_num": 2,
        "text1_maxlen": 20,
        "text2_maxlen": 20
    },
    "train": {
        "input_type": "Triletter_PointGenerator", 
        "dtype": "dssm",
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 20,
        "batch_per_iter": 5,
        "batch_size": 1024,
        "relation_file": "./data/QuoraQP/relation_train.txt"
    },
    "valid": {
        "input_type": "Triletter_PointGenerator", 
        "dtype": "dssm",
        "phase": "EVAL",
        "batch_size": 1024,
        "relation_file": "./data/QuoraQP/relation_valid.txt"
    },
    "test": {
        "input_type": "Triletter_PointGenerator", 
        "dtype": "dssm",
        "phase": "EVAL",
        "batch_size": 1024,
        "relation_file": "./data/QuoraQP/relation_test.txt"
    },
    "predict": {
        "input_type": "Triletter_PointGenerator", 
        "dtype": "dssm",
        "phase": "PREDICT",
        "batch_size": 1024,
        "relation_file": "./data/QuoraQP/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TEXTNET",
      "save_path": "predict.test.dssm_quoraqp.txt"
    }
  },
  "model": {
    "model_path": "matchzoo/models/",
    "model_py": "dssm.DSSM",
    "setting": {
        "hidden_sizes": [300],
        "dropout_rate": 0.9
    }
  },
  "losses": [
    {
       "object_name": "categorical_crossentropy",
       "object_params": {}
    }
  ],
  "metrics": [ "accuracy" ]
}

