{
  "net_name": "ARCI",
  "global":{
      "model_type": "PY",
      "weights_file": "./models/arci.weights",
      "num_epochs": 1000,
      "num_batch": 10,
      "optimizer": "adam",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus": "../data/example/corpus_preprocessed.txt",
        "text2_corpus": "../data/example/corpus_preprocessed.txt",
        "use_dpool": true,
        "fill_word": 3272,
        "embed_size": 10,
        "vocab_size": 3273,
        "text1_maxlen": 20,
        "text2_maxlen": 20
    },
    "train": {
        "input_type": "PointGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 20,
        "batch_per_iter": 5,
        "batch_size": 20,
        "relation_file": "../data/example/relation_train.txt"
    },
    "valid": {
        "input_type": "PointGenerator", 
        "phase": "EVAL",
        "batch_size": 100,
        "relation_file": "../data/example/relation_test.txt"
    },
    "test": {
        "input_type": "PointGenerator", 
        "phase": "EVAL",
        "batch_size": 100,
        "relation_file": "../data/example/relation_test.txt"
    },
    "predict": {
        "input_type": "PointGenerator", 
        "phase": "PREDICT",
        "batch_size": 100,
        "relation_file": "../data/example/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "predict.test.fold1.txt"
    }
  },
  "model": {
    "model_path": "./models/",
    "model_py": "arci.ARCI"
  },
  "losses": [ "mean_squared_error" ],
  "metrics": [ "ndcg@3", "ndcg@5", "map" ]
}

